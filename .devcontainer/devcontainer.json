{
  "name": "JVM CLI",
  "image": "ghcr.io/graalvm/graalvm-community:24",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "jetbrains" : {
      "plugins" : [
        "org.intellij.scala",
        "IdeaVIM"
      ],
    },
  },
  "forwardPorts": [8080, 8000],
  "mounts": [
    "source=gradle-cache,target=/home/vscode/.gradle,type=volume"
  ]
}